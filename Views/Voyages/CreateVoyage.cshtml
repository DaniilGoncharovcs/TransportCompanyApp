@model Voyage
@{
    ViewData["Title"] = "Добавление рейса";
}
<h2>Добавление рейса</h2>
<form asp-action="CreateVoyage" asp-controller="Voyages">
    <div class="form-group">
        <label asp-for="Customer"></label>
        <input type="text" asp-for="Customer" class="form-control"/>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Start"></label>
        <input asp-for="Start" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="End"></label>
        <input asp-for="End" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateStart"></label>
        <input asp-for="DateStart" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateEnd"></label>
        <input asp-for="DateEnd" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsPaid"></label>
        <input asp-for="IsPaid"/>
    </div>
    <div class="form-group">
        <label asp-for="IsReturned"></label>
        <input asp-for="IsReturned" />
    </div>
    <div class="form-group">
        <label asp-for="AutoId"></label>
        <select asp-for="AutoId">
            @foreach(var item in ViewBag.Autos){
                <option value="@item.AutoId">@item.AutoId - @item.RegisterNumber</option>
            }
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="CargoId"></label>
        <select asp-for="CargoId">
            @foreach (var item in ViewBag.Cargos)
            {
                <option value="@item.CargoId">@item.CargoId - @item.Name</option>
            }
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <select asp-for="EmployeeId">
            @foreach (var item in ViewBag.Employees)
            {
                <option value="@item.EmployeeId">@item.EmployeeId - @item.FIO</option>
            }
        </select>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Добавить рейс" class="btn btn-primary" />
    </div>
</form>