@model CarModel
@{
    ViewData["Title"] = "Изменение марки автомобиля";
}
<h2>Изменение марки автомобиля</h2>
<form asp-action="EditCarModel" asp-controller="CarModels" asp-route-id="@Model.CarModelId">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Specifications"></label>
        <input type="text" asp-for="Specifications" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Description"></label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Изменить марку автомобиля" class="btn btn-primary" />
    </div>
</form>