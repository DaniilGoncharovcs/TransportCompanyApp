@model Cargo
@{
    ViewData["Title"] = "Добавление груза";
}
<h2>Добавление груза</h2>
<form asp-action="CreateCargo" asp-controller="Cargos">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control"/>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="CargoTypeId"></label>
        <select asp-for="CargoTypeId">
            @foreach(var cargoType in ViewBag.CargoTypes){
                <option value="@cargoType.AutoTypeId">@cargoType.CargoTypeId - @cargoType.Name</option>
            }
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ExpirationDate"></label>
        <input type="date" asp-for="ExpirationDate" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Features"></label>
        <input type="text" asp-for="Features" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Добавить груз" class="btn btn-primary" />
    </div>
</form>