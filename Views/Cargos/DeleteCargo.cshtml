@model Cargo
@{
    ViewBag.Title = "Удаление груза";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы хотите удалить груз с наименованием:</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <div>
        <form asp-controller="Cargos" asp-action="Delete" method="post" asp-route-id="@Model.CargoId">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Удалить" />
            </div>
        </form>
    </div>
</div>